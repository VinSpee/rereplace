{
  "name": "rereplace",
  "version": "0.2.0",
  "description": "replace regex in one file with the contents of another file",
  "main": "lib/index.js",
  "bin": "lib/cli.js",
  "scripts": {
    "pretest": "npm run lint",
    "test": "babel-tape-runner src/**/__tests__/*-test.js | tap-spec",
    "posttest": "npm run test:coverage",
    "istanbul": "^0.4.2",
    "lint": "eslint src/**/*.js",
    "test:watch": " chokidar 'src/**/*.js' -c 'clear && npm run -s test'",
    "test:coverage": "babel-node node_modules/.bin/isparta cover --report text --report lcov ./src/__tests__/*-test.js",
    "build": "babel src --out-dir lib",
    "watch": "babel src --out-dir lib --watch",
    "prepublish": "npm run test && npm run build",
    "start": "node lib/cli.js"
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm run lint"
    }
  },
  "babel": {
    "presets": [
      "es2015-node5"
    ]
  },
  "keywords": [
    "regex",
    "replace",
    "inject",
    "insert"
  ],
  "author": "Vince Speelman",
  "license": "ISC",
  "dependencies": {
    "meow": "^3.7.0",
    "fs-jetpack": "^0.9.1"
  },
  "devDependencies": {
    "babel-cli": "^6.4.5",
    "babel-eslint": "^6.0.4",
    "babel-preset-es2015-node5": "^1.1.2",
    "babel-tape-runner": "^2.0.0",
    "chokidar-cli": "^1.2.0",
    "codeclimate-test-reporter": "^0.3.1",
    "eslint": "^3.0.0",
    "eslint-config-airbnb": "^9.0.1",
    "eslint-plugin-import": "1.14.0",
    "ghooks": "^1.0.3",
    "isparta": "^4.0.0",
    "npm-run-all": "^2.1.1",
    "tap-spec": "^4.1.1",
    "tape": "^4.4.0"
  }
}
